<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.ragazm.bakingapp.bakingapp.RecipeListFragment"
    tools:context=".IngredientListActivity"
    tools:listitem="@layout/recipe_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recipe_list"
        android:name="com.ragazm.bakingapp.bakingapp.RecipeListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        tools:context="com.ragazm.bakingapp.bakingapp.IngredientListActivity"
        tools:listitem="@layout/recipe_list_content"
        app:layoutManager="LinearLayoutManager"/>


    </LinearLayout>
